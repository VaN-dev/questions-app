{% extends 'back/base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Run evaluation</h1>
    </div>

    <form method="post">
    {% for question in evaluation.questions %}
        <div class="form-group">
            <label class="form-control-label">{{ question.label }}</label>

            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio-{{ question }}-1" value="1">
                    <label class="form-check-label" for="inlineRadio-{{ question }}-1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio-{{ question }}-2" value="2">
                    <label class="form-check-label" for="inlineRadio-{{ question }}-2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio-{{ question }}-3" value="3">
                    <label class="form-check-label" for="inlineRadio-{{ question }}-3">3</label>
                </div>
            </div>
        </div>
    {% endfor %}
    </form>
{% endblock body %}
